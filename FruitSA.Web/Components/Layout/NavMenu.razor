@using FruitSA.Web.Components.Pages
@rendermode InteractiveServer

<style>
    .nav-link span{
        margin-right:5px;
    }

</style>
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">FruitSA App</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    
    <nav class="flex-column">
        @if (!string.IsNullOrEmpty(@Token))
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@($"/{@Token}")" Match="NavLinkMatch.All">
                    <span class="fas fa-home" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@($"/products/{@Token}")" Match="NavLinkMatch.All">
                    <span class="fas fa-cubes" aria-hidden="true"></span> Products
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="@($"/categories/{@Token}")">
                    <span class="fas fa-table" aria-hidden="true"></span> Categories
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link"  href="/login">
                    <span class="fas fa-unlock" aria-hidden="true"></span> Logout
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/index.html" Match="NavLinkMatch.All">
                    <span class="fas fa-home" aria-hidden="true"></span> Home
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/login">
                    <span class="fas fa-lock" aria-hidden="true"></span> Login
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link hand" href="/register">
                    <span class="fas fa-user-plus" aria-hidden="true"></span> Register
                </NavLink>
            </div>
        }
    </nav>    
    
</div>

@code{
    [Parameter]
    public string Token { get; set; } = "";
}

