@page "/products"
@inherits ProductsBase
@rendermode InteractiveServer

<h3>Products</h3>

@if (Products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        @foreach (var product in Products)
        {
            var category = Categories.FirstOrDefault(c => c.CategoryId == product.CategoryId);
            <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@product.Name</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="@product.Image" />
                <div class="card-footer text-center">
                    <a href="@($"/product-details/{product.ProductId}")" class="btn btn-primary m-1">View</a>
                    
                    <a href="@($"/edit-product/{product.ProductId}")" class="btn btn-info">Edit</a>
                    <a href="@($"/delete/{product.ProductId}")" class="btn btn-danger">Delete</a>
                    
                </div>
            </div>

        }
    </div>
    <div class="row">
        @foreach (var product in Products)
        {
            var category = Categories.FirstOrDefault(c => c.CategoryId == product.CategoryId);
            <div class="card m-3" style="min-width:14rem; max-width:30%;">
            
            <img class="card-img-top imageThumbnail" src="@product.Image" />
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Category: @category.Name</li>
                <li class="list-group-item">Code: @product.ProductCode</li>
                <li class="list-group-item">Price (R): @product.Price</li>
            </ul>
            <div class="card-body">
                <a href="@($"/edit-product/{product.ProductId}")" class="btn btn-info">Edit</a>
                <a href="@($"/delete/{product.ProductId}")" class="btn btn-danger">Delete</a>
            </div>
        </div>
        }
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>ID:</th>
                <th>Code:</th>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Price (R)</th>
                <th>Date Created</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Products)
            {
                var category = Categories.FirstOrDefault(c => c.CategoryId == product.CategoryId);
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductCode</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@category.Name</td>
                    <td>@product.Price</td>
                    <td>@product.CreatedDate.ToShortDateString()</td>
                    <td>
                        <a href="@($"/view-product/{product.ProductId}")" class="btn btn-info">View</a>
                       
                    </td>
                </tr>
            }

            <tr>
                <td colspan="8">
                    <a href="/add-product" class="btn btn-success">ADD</a>
                </td>
            </tr>
        </tbody>
    </table>
}
